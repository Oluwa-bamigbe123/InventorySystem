@model IEnumerable<InventorySystem.Models.Entities.Agent>


<div class="pt-3">
    <div class="row pt-4">

    </div>
    <div class="col-6">
        <h2 class="text-primary">Agents List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Agent" asp-action="Create" class="btn btn-primary">
            Create New Agent
        </a>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">
                        Agent UserName
                    </th>
                    <th scope="col">
                        Agent Email
                    </th>
                    <th scope="col">
                        Agent PhoneNumber

                    </th>
                    <th scope="col">
                        Agent Address

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>@obj.UserName</td>
                    <td>@obj.Email</td>
                    <td>@obj.PhoneNumber</td>
                    <td>@obj.Address</td>

                    <td>
                        |
                        <a asp-action="Details" asp-route-id="@obj.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                        <a asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    </td>

                </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p> Oops No Agents  Yet</p>
    }

</div>


@model IEnumerable<InventorySystem.Models.Entities.Agent>


<div class="pt-3">
    <div class="row pt-4">

    </div>
    <div class="col-6">
        <h2 class="text-primary">Agents List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Agent" asp-action="Create" class="btn btn-primary">
            Create New Agent
        </a>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Agent UserName
                    </th>
                    <th>
                        Agent Email
                    </th>
                    <th>
                        Agent PhoneNumber

                    </th>
                    <th>
                        Agent Address

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.UserName</td>
                    <td width="30%">@obj.Email</td>
                    <td width="30%">@obj.PhoneNumber</td>
                    <td width="30%">@obj.Address</td>

                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Oops No Agents  Yet</p>
    }

</div>


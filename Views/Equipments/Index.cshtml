@model IEnumerable<InventorySystem.Models.Equipments>
@{
    Layout = "";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>


<div class="pt-3">
    <div class="row pt-4">

    </div>
    <div class="col-6">
        <h2 class="text-primary">Equipment List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Equipments" asp-action="Create" class="btn btn-primary">
            Create New Equipment
        </a>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">
                Equipment Name
            </th>
            <th scope="col">
                Equipment Type
            </th>
            <th scope="col">
                Number In Store

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
        <tr>
            <td>@obj.EquipmentName</td>
            <td>@obj.EquipmentType</td>
            <td>@obj.EquipmentNumber</td>

            <td>
                |
                <a asp-action="Details" asp-route-id="@obj.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
            </td>
        </tr>
        
        
    }
        </tbody>
      
    </table>
    }
    else
    {
        <p> Oops No Equipment In Store Yet</p>
    }

</div>


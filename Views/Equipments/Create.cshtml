@model InventorySystem.Models.Equipments
@{
    Layout = "";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<form  method="post" asp-action="Create">
    <div class="border pt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" justify-content-center form-group row">
            <h2 class="text-info pl-3"> Add Equipment</h2>
        </div>
        <div class=" justify-content-center card">
            <div class="justify-content-center form-group col-md-4">
                <label asp-for="EquipmentName" class="control-label"></label>
                <input asp-for="EquipmentName" class="form-control" />
                <span asp-validation-for="EquipmentName" class="text-danger"></span>
            </div>

            <div class="justify-content-center form-group col-md-4">
                <label asp-for="EquipmentType" class="control-label"></label>
                <input asp-for="EquipmentType" class="form-control" />
                <span asp-validation-for="EquipmentType" class="text-danger"></span>
            </div>
            <div class="justify-content-center form-group col-md-4">
                <label asp-for="EquipmentNumber" class="control-label"></label>
                <input asp-for="EquipmentNumber" class="form-control" />
                <span asp-validation-for="EquipmentNumber" class="text-danger"></span>
            </div>
            <div class="justify-content-center card-footer">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="form-group">

                    <a asp-action="Index" class=" btn btn-primary">Back</a>
                </div>
                @*<div class="card-footer">
                    <div class="form-group">
                        <a asp-action="Index" class=" btn btn-primary">Back</a>
                    </div>*@
            </div>
        </div>

    </div>
</form>


@model IEnumerable<InventorySystem.Models.Entities.Manager>


<div class="pt-3">
    <div class="row pt-4">

    </div>
    <div class="col-6">
        <h2 class="text-primary">Managers List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Manager" asp-action="Create" class="btn btn-primary">
            Create New Manager
        </a>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Middle Name

                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone Number
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.FirstName</td>
                    <td width="30%">@obj.LastName</td>
                    <td width="30%">@obj.MiddleName</td>
                    <td width="30%">@obj.Email</td>
                    <td width="30%">@obj.PhoneNumber</td>

                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Oops No Manager  Yet</p>
    }

</div>


